{
  "manifest_version": 3,
  "name": "AI Studio Listing Helper",
  "version": "1.0.0",
  "description": "Áp dụng các listing đã lưu từ AI Studio lên Etsy.",
  "permissions": [
    "storage",    
    "scripting"
  ],
  "host_permissions": [
    "https://imagetoupload.vercel.app/*",
    "https://www.etsy.com/your/listings/create*",
    "https://www.etsy.com/listing/copy/*",
    "https://*.etsy.com/your/shops/me/listing-editor/copy/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.etsy.com/your/listings/create*",
        "https://www.etsy.com/listing/copy/*",
        "https://*.etsy.com/your/shops/me/listing-editor/copy/*"
      ],
      "js": ["content.js"]
    }
  ]
}